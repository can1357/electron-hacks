{
  "publish": null,
  "appId": "com.anthropic.claude-desktop",
  "productName": "Claude Desktop",
  "directories": {
    "output": "dist/claude-desktop"
  },
  "files": [
    "claude-desktop/main.js",
    "claude-desktop/breeze.css",
    "claude-desktop/native-stub.js",
    "claude-desktop/auto-approve.js",
    "claude-desktop/icon.png",
    "claude-desktop/resources/*.json",
    "claude-desktop/resources/TrayIcon*.png",
    "claude-desktop/resources/fonts/**/*",
    "claude-desktop/resources/app/**/*",
    "!claude-desktop/resources/app/main.js",
    "!claude-desktop/resources/app/breeze.css",
    "!claude-desktop/resources/app/native-stub.js",
    "!claude-desktop/resources/app/auto-approve.js",
    "!claude-desktop/resources/app/icon.png",
    "!claude-desktop/resources/app/package.json"
  ],
  "asar": false,
  "extraMetadata": {
    "name": "claude-desktop",
    "main": "claude-desktop/main.js"
  },
  "linux": {
    "artifactName": "${name}-${version}-${arch}.${ext}",
    "target": ["AppImage", "deb"],
    "category": "Office",
    "icon": "claude-desktop/icon.png",
    "executableName": "claude-desktop"
  }
}
