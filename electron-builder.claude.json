{
  "publish": null,
  "appId": "com.anthropic.claude-desktop",
  "productName": "Claude Desktop",
  "directories": {
    "output": "dist/claude-desktop"
  },
  "files": [
    "claude-desktop/main.js",
    "claude-desktop/breeze.css",
    "claude-desktop/native-stub.js",
    "claude-desktop/auto-approve.js",
    "claude-desktop/force-thinking.js",
    "claude-desktop/icon.png",
    "claude-desktop/resources/**/*",
    {
      "from": "claude-desktop/resources/app/.vite",
      "to": ".vite"
    },
    {
      "from": "claude-desktop/resources/app/node_modules",
      "to": "node_modules"
    }
  ],
  "asar": false,
  "extraMetadata": {
    "name": "claude-desktop",
    "main": "claude-desktop/main.js"
  },
  "linux": {
    "artifactName": "${name}-${version}-${arch}.${ext}",
    "target": ["AppImage"],
    "category": "Office",
    "icon": "claude-desktop/icon.png",
    "executableName": "claude-desktop"
  },
  "deb": {
    "compression": "gz",
    "priority": "optional"
  }
}
