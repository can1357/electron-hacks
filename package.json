{
  "name": "electron-hacks",
  "version": "1.2.0",
  "description": "Electron wrappers for web apps",
  "scripts": {
    "new-app": "node scripts/new-app.js",
    "update-claude": "node scripts/update-claude.js",
    "start:miro": "electron miro/main.js",
    "start:notion": "electron notion/main.js",
    "start:claude-desktop": "electron --no-sandbox claude/resources/app",
    "build:miro": "electron-builder --config electron-builder.miro.json --linux",
    "build:miro:deb": "electron-builder --config electron-builder.miro.json --linux deb",
    "build:miro:rpm": "electron-builder --config electron-builder.miro.json --linux dir && node build-rpm.js miro",
    "build:miro:appimage": "electron-builder --config electron-builder.miro.json --linux AppImage",
    "build:notion": "electron-builder --config electron-builder.notion.json --linux",
    "build:notion:deb": "electron-builder --config electron-builder.notion.json --linux deb",
    "build:notion:rpm": "electron-builder --config electron-builder.notion.json --linux dir && node build-rpm.js notion",
    "build:notion:appimage": "electron-builder --config electron-builder.notion.json --linux AppImage",
    "build:claude-desktop": "electron-builder --config electron-builder.claude.json --linux",
    "build:claude-desktop:deb": "electron-builder --config electron-builder.claude.json --linux deb",
    "build:claude-desktop:rpm": "electron-builder --config electron-builder.claude.json --linux dir && node build-rpm.js claude-desktop",
    "build:claude-desktop:appimage": "electron-builder --config electron-builder.claude.json --linux AppImage"
  },
  "keywords": [
    "electron",
    "miro",
    "notion",
    "claude",
    "wrapper"
  ],
  "homepage": "https://github.com/can1357/electron-hacks",
  "author": {
    "name": "Can Bölük",
    "email": "me@can.ac"
  },
  "license": "MIT",
  "devDependencies": {
    "asar": "^3.2.0",
    "electron": "^39.2.4",
    "electron-builder": "^26.0.12"
  }
}
